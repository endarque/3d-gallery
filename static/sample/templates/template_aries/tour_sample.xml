        <include url="../../gallery_components/plugins/intro.xml?nocache=%$random%"/>
        <view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="140" maxpixelzoom="1.0" fovmin="70" fovmax="140"
              limitview="lookat"/>
        <image>
            <cube url="../../gallery_components/panos/theme_aries/pano_%s.jpg"/>
        </image>
        <addhs_settings video_close_click="false" youtube_close_click="false" keyboard_activation_of_the_editor="true"/>
