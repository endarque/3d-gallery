        <view hlookat="0.0" vlookat="-70.0" fovtype="MFOV" fov="157" minpixelzoom="0.2" maxpixelzoom="0.4" fovmin="30" fovmax="160"
              vlookatmin="-60" vlookatmax="-70" limitview="lookat"/>
        <image>
            <cube url="../../gallery_components/panos/theme_004/pano_%s.jpg"/>
